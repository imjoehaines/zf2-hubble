{{ docType() }}
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>
            {% block title %}Hubble{% endblock title %}
        </title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block meta %}{% endblock meta %}

        <link href="{{ basePath() }}/assets/images/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon">

        <link href="{{ basePath() }}/assets/css/marx.min.css" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ basePath() }}/assets/css/style.css" media="screen" rel="stylesheet" type="text/css">
        {% block style %}{% endblock style %}

        {% block script %}{% endblock script %}
    </head>
    <body>
        <main>
            <header class="row">
                <h1 class="half column"><a href="{{ basePath() }}">Hubble</a></h1>

                <span class="column add-branch">
                    <a href="{{ basePath() }}/branch/new">
                        <button class="primary">Add New Branch</button>
                    </a>
                </span>

                <nav class="two column">
                    <ul>
                        {# TODO: fix this mess #}
                        {% set url = serverUrl(true)|split('/') %}
                        {% set action = url|last %}
                        <li><a href="{{ basePath() }}/branches/all" {{ action == 'all' ? 'class="active"' }}>All</a></li>
                        <li><a href="{{ basePath() }}/branches/unreleased" {{ (action == 'unreleased' or action == '' or action =='branches') ? 'class="active"' }}>Unreleased</a></li>
                        <li><a href="{{ basePath() }}/branches/deployed" {{ action == 'deployed' ? 'class="active"'}}>Deployed</a></li>
                    </ul>
                </nav>
            </header>

            <section>
                {% block content %}{{ content }}{% endblock content %}
            </section>
        </main>

        {% block inline %}{% endblock inline %}
    </body>
</html>

{{ docType() }}
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>
            {% block title %}ZF2 {{ translate('Skeleton Application') }}{% endblock title %}
        </title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block meta %}{% endblock meta %}

        <link href="{{ basePath() }}/assets/images/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon">

        <link href="{{ basePath() }}/assets/css/marx.min.css" media="screen" rel="stylesheet" type="text/css">
        <link href="{{ basePath() }}/assets/css/style.css" media="screen" rel="stylesheet" type="text/css">
        {% block style %}{% endblock style %}

        {% block script %}{% endblock script %}
    </head>
    <body>
        <main>
            <header>
                <h1><a href="{{ basePath() }}">Hubble</a></h1>

                <nav>
                    <ul>
                        <li><a href="#"><strong>Unreleased</strong></a></li>
                        <li><a href="#">Deployed</a></li>
                    </ul>
                </nav>
            </header>

            <section>
                {% block content %}{{ content }}{% endblock content %}
            </section>
        </main>

        {% block inline %}{% endblock inline %}
    </body>
</html>
